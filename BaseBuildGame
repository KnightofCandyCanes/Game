    static void waitsecs(int target) {
        LockSupport.parkNanos(TimeUnit.SECONDS.toNanos(target));
    }
    static void waitnanosecs(int target) {
        LockSupport.parkNanos(TimeUnit.MILLISECONDS.toNanos(target));
    }
